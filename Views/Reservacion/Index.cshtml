@model IEnumerable<RegistroRestaurante.Models.Reservacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Reservaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Reservación</a>
</p>

<table class="table table-striped table-responsive">

    <thead class="bg-success text-white">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Mesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Mesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nombre)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id=item.Id}, new {@class="btn btn-info"}) |
                @Html.ActionLink("Detalle", "Details", new { id=item.Id }, new {@class="btn btn-warning"}) |
                @Html.ActionLink("Eliminar", "Delete", new {  id=item.Id }, new {@class="btn btn-danger"}) |
            </td>
        </tr>
}
    </tbody>
</table>
