@model RegistroRestaurante.Models.Reservacion

@{
    ViewData["Title"] = "Crear";
    var listaClientes = ViewBag.Clientes;
    var listaUsuarios = ViewBag.Usuarios;
}

<h1>Nueva Reservación</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Mesa" class="control-label"></label>
                <input asp-for="Mesa" class="form-control" />
                <span asp-validation-for="Mesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
               <select asp-for="ClienteId" class="form-control">
                    @foreach(var item in listaClientes)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
               </select> 
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control">
                    @foreach(var item in listaUsuarios)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
