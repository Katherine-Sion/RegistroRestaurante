@model IEnumerable<RegistroRestaurante.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Cliente</a>
</p>
<table class="table table-striped table-responsive">

    <thead class="bg-success text-white">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teléfono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dirección)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teléfono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dirección)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id=item.Id }, new {@class ="btn btn-info"}) |
                @Html.ActionLink("Detalle", "Details", new { id=item.Id }, new {@class ="btn btn-warning"}) |
                @Html.ActionLink("Eliminar", "Delete", new {  id=item.Id }, new {@class ="btn btn-danger"}) |
            </td>
        </tr>
}
    </tbody>
</table>
