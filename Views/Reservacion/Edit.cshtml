@model RegistroRestaurante.Models.Reservacion

@{
    ViewData["Title"] = "Editar";
     var listaClientes = ViewBag.Clientes;
      var listaUsuarios = ViewBag.Usuarios;
}

<h1>Modificar Reservación</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Mesa" class="control-label"></label>
                <input asp-for="Mesa" class="form-control" />
                <span asp-validation-for="Mesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control">
                     @foreach(var item in listaClientes)
                    {
                        if(Model.Id == item.Id)
                        {
                            <option selected value="@item.Id">@item.Nombre</option>
                        }
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" >
                     @foreach(var item in listaUsuarios)
                    {
                        if(Model.Id == item.Id)
                        {
                            <option selected value="@item.Id">@item.Nombre</option>
                        }
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>

                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                 <a asp-action="Index">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
